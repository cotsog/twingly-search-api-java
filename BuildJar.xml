<?xml version="1.0" encoding="UTF-8"?>
<project default="zipDocsAndJar">

  <target name="compile">
    <mkdir dir="bin"/>
    <javac srcdir="src/com/twingly/analytics/"
           destdir="bin"
           target="1.5"
           encoding="UTF-8"
           debug="True"
           />
  </target>

  <target name="jar" depends="compile">
    <jar destfile="twingly-api.jar"
         basedir="bin"
         includes="**/*.class"
         />
  </target>

  <target name="javadoc">
    <javadoc sourcepath="src"
             destdir="doc"
             Public="true"
             encoding="UTF-8"
             />
  </target>

  <target name="zipDocsAndJar" depends="jar,javadoc">
    <zip destfile="twingly-java-api.zip"
         basedir="."
         includes="doc/**,twingly-api.jar"
         level="9"
         />
  </target>
</project>
